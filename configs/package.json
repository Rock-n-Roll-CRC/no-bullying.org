{
  "name": "no-bullying.org",
  "version": "1.0.0",
  "description": "no-bullying.org is a haven for people who are being bullied and want to stop it. Our quiz will help you make your dream come true, giving you concrete steps to solving your problem.",
  "main": "public/index.html",
  "author": "Danil_Dikhtyar",
  "type": "module",
  "scripts": {
    "copy:assets": "copyfiles -u 1 ./src/assets/**/* public",
    "copy:html": "copyfiles -u 1 ./src/*.html public",
    "watch:assets": "onchange \"/src/assets/**/*\" -- npm run copy:assets",
    "watch:html": "onchange \"src/*.html\" -- npm run copy:html",
    "watch:sass": "sass --watch src/scss:public/css",
    "build:sass": "sass src/scss:public/css",
    "serve": "browser-sync start --server public --files public",
    "copy": "npm-run-all --parallel copy:*",
    "watch": "npm-run-all --parallel watch:*",
    "build": "npm-run-all copy:html build:*",
    "postbuild": "postcss public/css/*.css -u autoprefixer cssnano -r --map",
    "start": "npm-run-all copy --parallel watch serve"
  },
  "keywords": [],
  "license": "ISC",
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.59.8",
    "autoprefixer": "^10.4.2",
    "browser-sync": "^3.0.2",
    "copyfiles": "^2.4.1",
    "cssnano": "^5.0.17",
    "eslint": "^8.42.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-config-standard-with-typescript": "^35.0.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-n": "^15.7.0",
    "eslint-plugin-promise": "^6.1.1",
    "eslint-plugin-react": "^7.32.2",
    "npm-run-all": "^4.1.5",
    "onchange": "^7.1.0",
    "postcss-cli": "^9.1.0",
    "prettier": "2.8.8",
    "sass": "^1.49.8",
    "stylelint": "^15.6.3",
    "stylelint-config-standard": "^33.0.0",
    "stylelint-config-standard-scss": "^9.0.0",
    "typescript": "^5.1.3"
  }
}
